{
  "useTabs": false,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "arrowParens": "always",
  "printWidth": 100,
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderGroupNamespaceSpecifiers": true,
  "importOrderParserPlugins": ["typescript", "jsx"],
  "importOrderSortSpecifiers": true,
  "importOrderSeparation": true,
  "importOrder": [
    "^node:(.*)",
    "^react",
    "<THIRD_PARTY_MODULES>",
    "^@(.*).css$",
    "^~/shared(.*)$",
    "^~/entities(.*)$",
    "^~/features(.*)$",
    "^~/widgets(.*)$",
    "^~/layouts(.*)$",
    "^~/pages(.*)$",
    "^~/app(.*)$",
    "^[./]"
  ]
}
